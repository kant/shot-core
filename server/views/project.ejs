<%- include('header') %>

<div class="container px-3 md:p-8 my-6 md:my-0 text-purple-100 mx-auto">

  <%- include('_nav', { project }) %>

  <div class="mt-12 md:mt-24">
    <div class="text-1xl md:text-2xl uppercase text-purple-400 leading-relaxed md:leading-none tracking-wide">
      Production
    </div>
    <a class="block text-6xl md:text-8xl font-bold uppercase leading-none -mt-2 tracking-tight text-shadow">
      <%= project.name %>
    </a>
  </div>

  <div class="flex justify-between mt-16 md:mt-32 space-x-4">
    <div>
      <h3 class="text-1xl md:text-2xl uppercase text-purple-600 leading-none">
        Shot List
      </h3>
      <a
        class="text-4xl md:text-7xl font-bold leading-none tracking-tight text-shadow"
        href="<%= `/projects/${project.id}/schedule` %>"
      >
        <%= days_count  %> Day<%= plural(days_count) %>
      </a>
    </div>

    <div>
      <h3 class="text-1xl md:text-2xl uppercase text-purple-600 leading-none">
        Scene List
      </h3>
      <a
        class="text-4xl md:text-7xl font-bold leading-none tracking-tight text-shadow"
        href="<%= `/projects/${project.id}/scenes` %>"
      >
        <%= scenes_count %> Scene<%= plural(scenes_count) %>
      </a>
    </div>

    <div>
      <h3 class="text-1xl md:text-2xl uppercase text-purple-600 leading-none">
        Shot List
      </h3>
      <a
        class="text-4xl md:text-7xl font-bold leading-none tracking-tight text-shadow"
        href="<%= `/projects/${project.id}/shots` %>"
      >
        <%= shots_count %> Shot<%= plural(shots_count) %>
      </a>
    </div>
  </div>

</div>

<%- include('footer') -%>
