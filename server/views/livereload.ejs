<script>
  ;(function () {
    const source = new EventSource('/livereload')
    const reload = () => {
      console.log('reloading â€¦')
      location.reload(true)
    }
    source.onmessage = reload
    source.onerror = () => (source.onopen = reload)
    console.log('listening for file changes')
  })()
</script>

