{
  "name": "shot-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "server": "NODE_ENV=development nodemon ./server/index.js",
    "browser-sync": "NODE_ENV=development browser-sync start --proxy localhost:8000 --files='server/**/*, public/**/*, lib/*' --ignore=node_modules --reload-delay 10 --no-notify --no-ui --no-open",
    "start": "NODE_ENV=development run-p --race server browser-sync",
    "test": "NODE_ENV=test tap -R classic --no-esm --no-cov test/*.test.js"
  },
  "dependencies": {
    "adm-zip": "0.4.14",
    "better-sqlite3": "5.4.3",
    "canvas": "2.6.1",
    "date-fns": "2.9.0",
    "date-fns-tz": "1.0.9",
    "ejs": "3.0.1",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "method-override": "3.0.0",
    "multiparty": "4.2.1"
  },
  "devDependencies": {
    "browser-sync": "2.26.7",
    "mock-fs": "4.10.4",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "tap": "14.10.6"
  }
}
