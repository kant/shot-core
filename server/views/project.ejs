<%- include('header') %>
<div class="helvetica ph3 pa4-ns mv3 ma0-ns">
  <div class="lh-copy">
    <h1 class="f3 ma0 mb4">
      <a href="/">Home</a> /
      <%= project.name %>
    </h1>

    <h2 class="f4 mv3">
      <a href="/projects/<%= project.id %>/schedule">Schedule</a>
    </h2>

    <h2 class="f4 mv3">
      <a href="<%= `/projects/${project.id}/slater` %>">
        Slater
      </a>
    </h2>
    
    <h2 class="f4 mv3">
      <a href="<%= `/projects/${project.id}/monitor` %>">
        Monitor
      </a>
    </h2>

    <% if (scenes.length) { %>
      <h2 class="f4 mv3">Scenes</h2>
      <% for (let scene of scenes) { %>
        Scene <%= scene.scene_number %>
        <%= scene.slugline ? `: ${scene.slugline}` : '' %><br/>
      <% } %>
    <% } %>

    <h2 class="f4 mv3">Shots</h2>
    <table class="w-100">
      <thead>
        <th>Scene</th>
        <th># in Scene</th>
        <th class="w-50">Notes <small>(from 1st board)</small></th>
        <th>Boards</th>
      </thead>
      <tbody>
        <% for (let shot of shots) { %>
        <tr>
          <td>
            <span>
              <%= scenes.find(scene => scene.id == shot.scene_id).scene_number %>
            </span>
          </td>
          <td>
            <a
              href="<%= `/projects/${shot.project_id}/scenes/${shot.scene_id}/shots/${shot.id}` %>"
            >
              <%= shot.shot_number %>
            </a>
          </td>
          <td>
            <%= shot.boards_json[0].notes %>
          </td>
          <td>
            <% for (let board of shot.boards_json) { %>
              <%= board.shot %>
            <% } %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
<%- include('footer') -%>
